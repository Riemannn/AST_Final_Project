@font-face
    font-family Lobster
    font-style normal
    src url('../fonts/LobsterTwo-Regular.ttf')

main
    padding-top 90px
    padding-left 110px
    padding-right 30px

.add-metrics
    display table
    margin 40px auto

    *
        padding 20px
        border none
        font-size 1.5rem

    input
        background-color #EEE

        &:focus
            outline none



path.line
    fill none
    stroke red

.grid line
  stroke lightgrey
  stroke-opacity 0.7
  shape-rendering crispEdges

.grid path
  stroke-width 0

.axisLeft text
    font-family Roboto
    font-size 15px

.axisBottom text
    font-family Roboto
    font-size 15px

nav.navbar .navbar-brand
    margin 0
    padding 0

    font-family Lobster
    font-size 1.6rem

.sub-header
  padding-bottom 10px
  border-bottom 1px solid #eee

.navbar
    position fixed
    right 0
    left 0
    z-index 1030
    border 0
    top 0


.sidebar
  display none


@media (min-width 768px)
  .sidebar
    position fixed
    bottom 0
    top 0
    width 80px
    display block
    padding 20px
    padding-top 64px
    overflow-x hidden
    overflow-y auto
    background-color #f5f5f5
    border-right 1px solid #eee

@media (min-width 992px)
  .sidebar
    top 0

/* Sidebar navigation */
.nav-sidebar {
  margin-right: -21px; /* 20px padding + 1px border */
  margin-bottom: 20px;
  margin-left: -20px;
}

.nav-sidebar li
    position relative
    display block
    padding 20px 15px
    width 100%

.nav-sidebar a
  display block
  width 100%
  color white
  text-decoration none

.nav-sidebar li:hover
    background-color #555

i.fa
    font-size 2em

.main
    padding 20px
    margin-left 80px

@media (min-width: 768px)
  .main
    top 64px
    padding-right 40px
    padding-left 40px

@media (min-width: 992px)
    .main
        top 59px

@media (max-width: 767px)
  .main
    top 59px
    margin-left 0

.main .page-header
  margin-top 0

.placeholders
  margin-bottom 30px
  text-align center

.placeholders h4
  margin-bottom 0

.placeholder
  margin-bottom 20px

.placeholder img
  display inline-block
  border-radius 50%

.speed
    width 50%
    padding 20px 0
    input.form-control
        width 100%
        padding 20px
