@font-face
   font-family Lobster
   font-style normal
   src url('../fonts/LobsterTwo-Regular.ttf')

h3
    margin 0
    color white
    font-family Lobster
    padding-right 30px

.nav-item
    padding-left 30px
    padding-right 30px

.sub-header
  padding-bottom 10px
  border-bottom 1px solid #eee

.navbar
    position fixed
    right 0
    left 0
    z-index 1030
    border 0
    top 0


.sidebar
  display none


@media (min-width 768px)
  .sidebar
    position fixed
    bottom 0
    top 64px
    display block
    padding 20px
    overflow-x hidden
    overflow-y auto
    background-color #f5f5f5
    border-right 1px solid #eee

@media (min-width 992px)
  .sidebar
    top 59px

/* Sidebar navigation */
.nav-sidebar {
  margin-right: -21px; /* 20px padding + 1px border */
  margin-bottom: 20px;
  margin-left: -20px;
}

.nav-sidebar li
    position relative
    display block
    padding 10px 15px
    width 100%

.nav-sidebar a
  padding-right 20px
  padding-left 20px
  display block
  width 100%
  color white
  text-decoration none

.nav-sidebar li:hover
    background-color #555


.main
    padding 20px

@media (min-width: 768px)
  .main
    top 64px
    padding-right 40px
    padding-left 40px

@media (min-width: 992px)
    .main
        top 59px

@media (max-width: 768px)
  .main
    top 59px

.main .page-header
  margin-top 0



/*
 * Placeholder dashboard ideas
 */

.placeholders {
  margin-bottom: 30px;
  text-align: center;
}
.placeholders h4 {
  margin-bottom: 0;
}
.placeholder {
  margin-bottom: 20px;
}
.placeholder img {
  display: inline-block;
  border-radius: 50%;
}
