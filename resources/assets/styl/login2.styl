@font-face
   font-family Lobster
   font-style normal
   src url('../fonts/LobsterTwo-Regular.ttf')

body
    background-image url('../img/fond.jpg')
    background-size cover
    background-repeat no-repeat
    background-position center center

.blur
    height 100%
    padding 50px 0
    background-color rgba(0,0,0,0.5)

h1
    margin-bottom 50px
    font-family Lobster
    font-size 8em
    color white
    text-shadow 2px 2px 5px rgba(0,0,0,0.4)

.row:nth-child(2)
    height 58vh

    .col-md-6.separator
        border-right 1px solid white

h2
    display table
    margin 10px auto 50px
    text-transform uppercase
    color white
    letter-spacing 10px
    text-shadow 2px 2px 5px rgba(0,0,0,0.4)

form#login
    input
        display table
        margin auto
        padding 10px
        width 20vw
        outline none
        border none
        border-bottom 1px solid #E9E9E9

        &:first-child
            border-radius 5px 5px 0 0

        &:nth-child(2)
            border-radius 0 0 5px 5px
            border-bottom none

    button
        display table
        margin auto
        margin-top 20px
        padding 10px
        width 20vw

form#register
    .combined
        display table
        margin auto

        input
            display inline-block
            padding 10px
            width 10vw
            outline none
            border none
            border-bottom 1px solid #E9E9E9

            &:first-child
                border-radius 5px 0 0 0
                border-right 1px solid #E9E9E9

            &:nth-child(2)
                border-radius 0 5px 0 0

    input
        display table
        margin auto
        padding 10px
        width 20vw
        outline none
        border none
        border-bottom 1px solid #E9E9E9

        &:nth-child(3)
            border-radius 0 0 5px 5px
            border-bottom none

    button
        display table
        margin auto
        margin-top 20px
        padding 10px
        width 20vw



@media (max-width 992px)
    h1
        margin 0
        color white
        font-family Lobster
        margin auto

    .form-inline
        margin auto

    .card
        margin-top 10px
        margin-bottom 10px

    .navbar .row
        margin auto

@media (max-width 768px)
    .form-group
        margin auto
        margin-top 10px

    .btn-outline-light
        margin auto
        margin-top 10px

    .card
        margin-top 10px
        margin-bottom 10px

    .navbar .row
        margin auto

    .page
        height 78%

@media (max-width 531px)
    .btn-outline-light
        padding-left 90px
        padding-right 90px

    .page
        height 73%
