extends layout

block title
    title Login
    
block styles
    link(rel='stylesheet', href='/css/login2.css')

block content
    .blur
        .container
            .row
                h1.col-12.text-center SkiPerf
            .row
                .col-md-6.separator
                    h2 Login
                    form#login(action="/login" method="post")
                        input(type="email" name="email" placeholder="Email" class=retry ? 'is-invalid' : '')
                        input(type="password" name="password" placeholder="Password" class=retry ? 'is-invalid' : '')
                        button.btn.btn-primary(type="submit") Sign in

                .col-md-6
                    h2 Register
                    form#register(action="/register" method="post")
                        .combined
                            input(type="text" name="firstname" placeholder="First name(s)")
                            input(type="text" name="lastname" placeholder="Last name(s)")
                        input(type="email" name="email" placeholder="Email address")
                        input(type="password" name="password" placeholder="Password")
                        button.btn.btn-primary(type="submit") Sign up
